<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administracion.AdminMenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@color/naranja"
                        android:gravity="center"
                        android:text="Panel menú"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/fondo_items"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <ImageView
                            android:id="@+id/img_menu_ad"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/imgen_bordes_redondos"
                            android:src="@drawable/pizza1" />

                        <EditText
                            android:id="@+id/text_nombre_ad"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Nombre del Plato"
                            android:maxEms="80"
                            android:maxLength="80"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/naranja"
                            android:textColorHint="@color/gris_claro" />

                        <EditText
                            android:id="@+id/text_precio_ad"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Precio en CUP"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/oscuro"
                            android:textColorHint="@color/gris_claro" />

                        <EditText
                            android:id="@+id/text_gramaje_ad"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Gramaje en g"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/oscuro"
                            android:textColorHint="@color/gris_claro" />

                        <EditText
                            android:id="@+id/text_descrip_ad"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Descripcion"
                            android:textColor="@color/oscuro"
                            android:textColorHint="@color/gris_claro" />

                        <TextView
                            android:id="@+id/text_tipo_ad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Tipo de plato"
                            android:textColor="@color/naranja" />
                        <Spinner
                            android:id="@+id/options_spinner"
                            android:gravity="center"
                            android:layout_width="250dp"
                            android:background="@color/gris_claro"
                            android:textAlignment="center"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:layout_height="35dp"
                            android:entries="@array/options_array" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_agregarMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/fondo_boton"
                        android:backgroundTint="@color/rosa"
                        android:padding="15dp"
                        android:text="Añadir un nuevo plato"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>