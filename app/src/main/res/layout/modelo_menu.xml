<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/fondo_items"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:background="@drawable/imgen_bordes_redondos"
        android:src="@drawable/pizza" />

    <TextView
        android:id="@+id/text_nombre_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/naranja"
        android:text="Nombre del Plato" />

    <TextView
        android:id="@+id/text_gramaje_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:textColor="@color/gris_claro"
        android:text="000gr" />

    <TextView
        android:id="@+id/text_precio_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/oscuro"
        android:text="$0000" />

    <TextView
        android:id="@+id/btn_listaaa"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/naranja"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="AÃ±adir" />
</LinearLayout>